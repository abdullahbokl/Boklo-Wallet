rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Wallets: Authenticated users can read/write
    // TODO: tighten this update rule for production (only allow self-update or via specific transfer constraints)
    match /wallets/{walletId} {
      allow read, write: if request.auth != null;
      
      match /transactions/{transactionId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Transfers: Authenticated users can read/write
    match /transfers/{transferId} {
      allow read, write: if request.auth != null;
    }
  }
}
